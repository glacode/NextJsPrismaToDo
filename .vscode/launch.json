{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "serverReadyAction": {
                "action": "debugWithChrome",
                "pattern": "started server on url (?<url>http://.+)",
                "webRoot": "${workspaceFolder}"
            }
        }
    ]
}